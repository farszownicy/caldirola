<?xml version="1.0" encoding="utf-8"?>
<farszownicy.caldirola.agendacalendar.agenda.AgendaEventView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_event_container">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_event_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/card"
        android:bottomLeftRadius="20dp"
        android:bottomRightRadius="20dp"
        android:gravity="center"
        android:topLeftRadius="20dp"
        android:topRightRadius="20dp">

        <ImageView
            android:id="@+id/location_iv"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:scaleType="centerInside"
            app:layout_constraintBottom_toBottomOf="@+id/location_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/event_name_tv"
            app:srcCompat="@drawable/location_icon" />

        <TextView
            android:id="@+id/event_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Event"
            android:textColor="#000000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/location_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:text="TextView"
            android:textColor="#3E3C3C"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/location_iv"
            app:layout_constraintTop_toBottomOf="@+id/event_name_tv" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</farszownicy.caldirola.agendacalendar.agenda.AgendaEventView>

