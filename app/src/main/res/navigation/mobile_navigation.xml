<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="farszownicy.caldirola.activities.StartupFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/startup_fragment">

        <action
            android:id="@+id/action_HomeFragment_to_HomeSecondFragment"
            app:destination="@id/nav_add_user" />
    </fragment>
    <fragment
        android:id="@+id/nav_add_user"
        android:name="farszownicy.caldirola.activities.AddUserFragment"
        android:label="@string/menu_add_user"
        tools:layout="@layout/fragment_add_user">
        <action
            android:id="@+id/action_HomeSecondFragment_to_HomeFragment"
            app:destination="@id/nav_home" />

        <argument
            android:name="myArg"
            app:argType="string" />
    </fragment>
</navigation>