<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ae_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ae_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/ae_headline"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ae_side_margin"
            android:layout_marginTop="@dimen/ae_top_margin"
            android:layout_marginRight="@dimen/ae_side_margin"
            android:layout_marginBottom="@dimen/ae_bottom_margin"
            android:fontFamily="sans-serif-light"
            android:text="Dodaj wydarzenie"
            android:textAlignment="center"
            android:textSize="@dimen/headline_font_size" />

        <EditText
            android:id="@+id/ae_input_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ae_side_margin"
            android:layout_marginTop="@dimen/ae_top_margin"
            android:layout_marginRight="@dimen/ae_side_margin"
            android:layout_marginBottom="@dimen/ae_bottom_margin"
            android:ems="10"
            android:fontFamily="sans-serif-light"
            android:hint="Nazwa"
            android:inputType="textPersonName"
            android:textSize="@dimen/ae_input_font_size" />

        <EditText
            android:id="@+id/ae_input_description"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ae_side_margin"
            android:layout_marginTop="@dimen/ae_top_margin"
            android:layout_marginRight="@dimen/ae_side_margin"
            android:layout_marginBottom="@dimen/ae_bottom_margin"
            android:ems="10"
            android:fontFamily="sans-serif-light"
            android:hint="Opis"
            android:inputType="textPersonName"
            android:textSize="@dimen/ae_input_font_size" />

        <TableRow
            android:id="@+id/ae_since_table"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/ae_since"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ae_side_margin"
                android:layout_marginTop="@dimen/ae_top_margin"
                android:layout_marginRight="@dimen/ae_side_margin"
                android:layout_marginBottom="@dimen/ae_bottom_margin"
                android:fontFamily="sans-serif-light"
                android:text="Od"
                android:textSize="@dimen/ae_input_font_size" />

            <TextView
                android:id="@+id/ae_start_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ae_side_margin"
                android:layout_marginTop="@dimen/ae_top_margin"
                android:layout_marginRight="@dimen/ae_side_margin"
                android:layout_marginBottom="@dimen/ae_bottom_margin"
                android:background="@drawable/rectangle"
                android:fontFamily="sans-serif-black"
                android:text="data"
                android:textSize="@dimen/ae_input_font_size" />

            <TextView
                android:id="@+id/ae_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ae_side_margin"
                android:layout_marginTop="@dimen/ae_top_margin"
                android:layout_marginRight="@dimen/ae_side_margin"
                android:layout_marginBottom="@dimen/ae_bottom_margin"
                android:background="@drawable/rectangle"
                android:fontFamily="sans-serif-black"
                android:text="czas"
                android:textSize="@dimen/ae_input_font_size" />

        </TableRow>

        <TableRow
            android:id="@+id/ae_to_table"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/ae_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ae_side_margin"
                android:layout_marginTop="@dimen/ae_top_margin"
                android:layout_marginRight="@dimen/ae_side_margin"
                android:layout_marginBottom="@dimen/ae_bottom_margin"
                android:fontFamily="sans-serif-light"
                android:text="Do"
                android:textSize="@dimen/ae_input_font_size" />

            <TextView
                android:id="@+id/ae_end_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ae_side_margin"
                android:layout_marginTop="@dimen/ae_top_margin"
                android:layout_marginRight="@dimen/ae_side_margin"
                android:layout_marginBottom="@dimen/ae_bottom_margin"
                android:background="@drawable/rectangle"
                android:fontFamily="sans-serif-black"
                android:text="data"
                android:textSize="@dimen/ae_input_font_size" />

            <TextView
                android:id="@+id/ae_end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ae_side_margin"
                android:layout_marginTop="@dimen/ae_top_margin"
                android:layout_marginRight="@dimen/ae_side_margin"
                android:layout_marginBottom="@dimen/ae_bottom_margin"
                android:background="@drawable/rectangle"
                android:fontFamily="sans-serif-black"
                android:text="czas"
                android:textSize="@dimen/ae_input_font_size" />
        </TableRow>

        <Spinner
            android:id="@+id/ae_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ae_side_margin"
            android:layout_marginTop="@dimen/ae_top_margin"
            android:layout_marginRight="@dimen/ae_side_margin"
            android:layout_marginBottom="@dimen/ae_bottom_margin" />


        <Button
            android:id="@+id/ae_add_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ae_side_margin"
            android:layout_marginTop="@dimen/ae_top_margin"
            android:layout_marginRight="@dimen/ae_side_margin"
            android:layout_marginBottom="@dimen/ae_bottom_margin"
            android:fontFamily="sans-serif-condensed"
            android:text="Dodaj mnie"
            android:textColor="@android:color/holo_purple"
            android:textSize="30sp" />
    </LinearLayout>


</ScrollView>