<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AddUserFragment">

    <ImageView
        android:id="@+id/circle4"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="330dp"
        android:layout_marginRight="10dp"
        app:srcCompat="@drawable/circle" />

    <ImageView
        android:id="@+id/circle"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="80dp"
        app:srcCompat="@drawable/circletransparant" />

    <ImageView
        android:id="@+id/circle3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="200dp"
        app:srcCompat="@drawable/circletransparant" />

    <ImageView
        android:id="@+id/circle5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="-50dp"
        app:srcCompat="@drawable/circletransparant" />

    <ImageView
        android:id="@+id/circle6"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="-40dp"
        android:layout_marginBottom="-30dp"
        app:srcCompat="@drawable/circle" />

    <ImageView
        android:id="@+id/circle8"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="-30dp"
        android:layout_marginBottom="150dp"
        app:srcCompat="@drawable/circle" />

    <ImageView
        android:id="@+id/circle11"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="70dp"
        android:layout_marginBottom="150dp"
        app:srcCompat="@drawable/circle" />

    <ImageView
        android:id="@+id/circle12"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="365dp"
        android:layout_marginBottom="550dp"
        app:srcCompat="@drawable/circle" />

    <ImageView
        android:id="@+id/circle14"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="370dp"
        android:layout_marginBottom="560dp"
        app:srcCompat="@drawable/circletransparant" />

    <ImageView
        android:id="@+id/circle13"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="360dp"
        android:layout_marginBottom="560dp"
        app:srcCompat="@drawable/circletransparant" />

    <ImageView
        android:id="@+id/circle7"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="120dp"
        app:srcCompat="@drawable/circletransparant" />

    <ImageView
        android:id="@+id/circle10"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="180dp"
        android:layout_marginBottom="70dp"
        app:srcCompat="@drawable/circle" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="228dp"
        android:background="@drawable/header_login"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <ImageView
        android:id="@+id/circle2"
        android:layout_width="76dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="244dp"
        android:layout_marginTop="220dp"
        app:srcCompat="@drawable/circle" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="60dp"
        android:fontFamily="sans-serif-light"
        android:text="Add user"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textSize="32dp" />

    <RelativeLayout
        android:id="@+id/rel_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:paddingTop="10dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            tools:layout_marginTop="20dp">

            <LinearLayout
                android:id="@+id/at_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingTop="20dp"
                android:paddingRight="10dp"
                android:paddingBottom="50dp"
                tools:layout_marginBottom="30dp">

                <TextView
                    android:id="@+id/surname_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="First Name"
                    android:textColor="@color/colorPurple"
                    android:textSize="18dp"
                    tools:layout_marginRight="10dp" />

                <EditText
                    android:id="@+id/firstNameET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:ems="10"
                    android:inputType="textPersonName" />

                <TextView
                    android:id="@+id/name_text3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Second Name"
                    android:textColor="@color/colorPurple"
                    android:textSize="18dp"
                    tools:layout_marginRight="10dp" />

                <EditText
                    android:id="@+id/secondNameET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:ems="10"
                    android:inputType="textPersonName" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cv"
            android:layout_alignLeft="@+id/cv"
            android:layout_alignRight="@+id/cv"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="-30dp"
            android:layout_marginRight="35dp"
            android:elevation="10dp">

            <Button
                android:id="@+id/addButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:background="@drawable/bg_ui"
                android:fontFamily="sans-serif-light"
                android:text="Add User"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="26sp" />
        </RelativeLayout>

    </RelativeLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rel_add">

        <Button
            android:id="@+id/list_button"
            android:layout_width="45dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:background="@drawable/bg_ui"
            android:clickable="false"
            android:drawableTop="@drawable/agenda"
            android:textColor="@color/colorWhite"
            app:layout_constraintBottom_toTopOf="@+id/rel_panel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
        <RelativeLayout
            android:id="@+id/rel_panel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_centerHorizontal="false"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/bt_uifb" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center">

                <Button
                    android:id="@+id/addevent_button"
                    android:layout_width="45dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="10dp"
                    android:background="@drawable/bg_ui"
                    android:drawableTop="@drawable/add_event" />

                <Button
                    android:id="@+id/plan_button"
                    android:layout_width="45dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="10dp"
                    android:background="@drawable/bg_ui"
                    android:drawableTop="@drawable/calendar"
                    android:textColor="@color/colorWhite" />

                <Button
                    android:id="@+id/fetch_button"
                    android:layout_width="45dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_margin="10dp"
                    android:background="@drawable/bg_ui"
                    android:drawableTop="@drawable/fetch"
                    android:textColor="@color/colorWhite" />

                <Button
                    android:id="@+id/addtask_button"
                    android:layout_width="45dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="10dp"
                    android:background="@drawable/bg_ui"
                    android:drawableTop="@drawable/task" />

                <Button
                    android:id="@+id/agenda_btn"
                    android:layout_width="45dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="10dp"
                    android:background="@drawable/bg_ui"
                    android:clickable="false"
                    android:drawableTop="@drawable/agenda"
                    android:textColor="@color/colorWhite" />

            </LinearLayout>

        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>